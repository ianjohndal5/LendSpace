@page "/Admin/Announcement"
@rendermode InteractiveServer

@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Context

<PageTitle>Announcements</PageTitle>

<main class="w-full h-full p-4">	
	<div class="max-w-7xl mx-auto px-4 py-8">
		<div class="bg-white p-6">
			<h1 class="text-3xl font-bold text-gray-900 mb-4">
				Announcement
			</h1>
			@foreach (var announcement in announcements!)
			{
				<div class="shadow-md p-6 flex flex-col">
					<h2 class="text-2xl font-semibold text-gray-900 px-2">@announcement.Heading</h2>
					<p class="px-2">@announcement.Body</p>
				</div>
			}
		</div>
	</div>
</main>

@code {
	AnnouncementModel[]? announcements { get; set; }
	AnnouncementModel? postModel { get; set; }

	protected override async Task OnInitializedAsync()
	{
		base.OnInitialized();

		announcements ??= await Context.Announcements.ToArrayAsync();
	}
}